{{> partials/navbars }}
<div class="container vh-100" id="main">
    <h1 class="h5">{{> partials/title }}</h1>
    <hr>
    <div class="table-responsive-sm">
        <div class="contentIngresarPaciente">
            <h2 class="titlePacientes"><span>Lista de Pacientes</span></h2>
            <a class="ingresarData__link" href="#" id="nuevoPaciente"><i class="bi bi-plus-circle"></i>Nuevo
                paciente</a>
        </div>
        <div class="contentTable">
            <table class="table px-2 table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Fecha de Nacimiento</th>
                        <th scope="col">Ciudad</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Celular</th>
                        <th scope="col">Acci√≥n</th>
                    </tr>
                </thead>
                <tbody id="infoTable">
                    {{#each pacientes}}
                    <tr>
                        <td data-label="">{{this.pk_idPaciente}}</td>
                        <td data-label="">{{this.nombre}}</td>
                        <td data-label="">{{this.apellido}}</td>
                        <td data-label="">{{this.sexo}}</td>
                        <td data-label="">{{this.fechaNacimiento}}</td>
                        <td data-label="">{{this.ciudad}}</td>
                        <td data-label="">{{this.estado}}</td>
                        <td data-label="">{{this.telefono}}</td>
                        <td>
                            <div class="contentButton">
                                <button type="button" name="{{this.pk_idPaciente}}" class="btn btn-warning btn-sm" id="buttonEditar"><i class="bi bi-pencil-fill"></i> Editar</button>
                                <button type="button" name="{{this.pk_idPaciente}}" class="btn btn-danger btn-sm" id="buttonEliminar"><i class="bi bi-trash"></i> Eliminar</button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>

    </div>
</div>
{{> partials/modalAddDataInput}}
{{> partials/modalEditDataInput}}
{{> partials/modalInfoAlert }}
{{> partials/footer }}