{{> partials/navbars }}
<div class="container vh-100" id="main">
  <h1 class="h5">{{> partials/title }}</h1>
  <hr>
  <div class="table-responsive-sm">
    <div class="contentIngresarPaciente">
      <h2 class="titlePacientes"><span>Lista de Especialistas</span></h2>
      <a class="buttonNuevaData" href="#" id="nuevoEspecialista"><i class="bi bi-plus-circle"></i>Nuevo especialista</a>
    </div>
    <div class="contentTable">
      <table class="table px-2 table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Sexo</th>
            <th scope="col">Fecha de Nacimiento</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Acci√≥n</th>
          </tr>
        </thead>
        <tbody id="infoTable">
          {{#each especialistas }}
          <tr>
            <td data-label="">{{this.pk_idEspecialista}}</td>
            <td data-label="">{{this.nombre}}</td>
            <td data-label="">{{this.apellido}}</td>
            <td data-label="">{{this.sexo}}</td>
            <td data-label="">{{this.fechaNacimiento}}</td>
            <td data-label="">{{this.especialidad}}</td>
            <td>
              <div class="contentButton-col-2">
                <button type="button" name="{{this.pk_idEspecialista}}" class="buttonEditarEspecialista"
                  id="buttonEditar"><i class="bi bi-pencil-fill"></i> Editar especialista</button>
                <button type="button" name="{{this.pk_idEspecialista}}" class="buttonEliminar"
                  id="buttonEliminar"><i class="bi bi-x-circle"></i></button>
              </div>
            </td>
          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>

  </div>

</div>
{{> partials/modalAddNewEspecialist}}
{{> partials/modalEditEspecialist}}
{{> partials/modalInfoAlert }}
{{> partials/footer }}