{{> partials/navbars }}
<div class="container vh-100" id="main">
    <h1 class="h5">{{> partials/title }}</h1>
    <hr>
    <div class="table-responsive-sm">
        <div class="contentIngresarPaciente">
            <h2 class="titlePacientes"><span>Lista de Especialistas</span></h2>
            <a class="ingresarData__link" href="#" id="nuevoEspecialista"><i class="bi bi-plus-circle"></i>Nuevo especialista</a>
        </div>
        <div class="contentTable">
            <table class="table px-2 table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Fecha de Nacimiento</th>
                        <th scope="col">Especialidad</th>
                         <th scope="col">Acci√≥n</th>
                    </tr>
                </thead>
                <tbody id="infoTable">
                    {{#each especialistas }}
                    <tr>
                        <td data-label="">{{this.pk_idEspecialista}}</td>
                        <td data-label="">{{this.nombre}}</td>
                        <td data-label="">{{this.apellido}}</td>
                        <td data-label="">{{this.sexo}}</td>
                        <td data-label="">{{this.fechaNacimiento}}</td>
                        <td data-label="">{{this.especialidad}}</td>
                        <td>
                            {{!-- // infoProducto(buscar.store_name, buscar.product_id,
                            replaceQuotes(buscar.product_name), buscar.quantity) --}}
                            <button type="button" name="{{this.pk_idEspecialista}}" class="btn btn-warning btn-sm"
                                id="buttonEditar"><i class="bi bi-pencil-fill"></i> Editar</button>
                            <button type="button" name="{{this.pk_idEspecialista}}" class="btn btn-danger btn-sm"
                                id="buttonEliminar"><i class="bi bi-trash"></i> Eliminar</button>

                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>

    </div>
</div>
